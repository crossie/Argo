<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- Base application theme, dependent on API level. This theme is replaced 
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices. -->
	<style name="AppBaseTheme" parent="Theme.AppCompat.Light">

		<!-- Theme customizations available in newer API levels can go in res/values-vXX/styles.xml, 
			while customizations related to backward-compatibility can go here. -->
		<!-- SwipeBackActivity需要下面这行 -->
		<item name="android:windowIsTranslucent">true</item>
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level 
			can go here. -->
		<item name="android:windowAnimationStyle">@style/AnimateTheme</item>
		<item name="android:actionBarStyle">@style/ActionBarStyle</item>
		<item name="android:actionBarTabTextStyle">@style/ActionBarTabText</item>
	</style>

	<style name="AnimateTheme" parent="@android:style/Animation.Activity">
		<item name="android:activityOpenExitAnimation">@anim/translate_exit</item>
		<item name="android:activityCloseExitAnimation">@anim/translate_exit</item>
	</style>

	<style name="ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
		<item name="android:background">#05430E</item>
		<item name="android:titleTextStyle">@style/ActionBarTitleText</item>
	</style>

	<style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">#FFFFFF</item>
	</style>

	<style name="ActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
		<item name="android:textColor">#237812</item>
	</style>

</resources>