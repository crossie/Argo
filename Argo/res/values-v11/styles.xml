<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!-- API 11 theme customizations can go here. -->
        <!-- <item name="android:windowIsTranslucent">true</item> -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!--
             All customizations that are NOT specific to a particular API-level 
			can go here.
        -->
        <item name="android:windowAnimationStyle">@style/AnimateTheme</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBarTabText</item>
    </style>

    <style name="AnimateTheme" parent="@android:style/Animation.Activity">
        <!-- <item name="android:activityOpenEnterAnimation">@anim/open_enter_slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/open_exit_slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/close_enter_slide_in</item>
        <item name="android:activityCloseExitAnimation">@anim/close_exit_slide_out</item> -->
    </style>

    <style name="ActionBarStyle" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">#05430E</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
    </style>

    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ActionBarTabText" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">#237812</item>
    </style>

</resources>